---
import Layout from '../layouts/Layout.astro';
import SafariPackages from '../components/SafariPackages';
---

<Layout 
  title="Safari Packages - Book Your Adventure" 
  description="Explore our curated safari packages across Kenya, Tanzania & Uganda. From budget adventures to luxury expeditions, find your perfect African safari."
>
  <!-- Hero Section -->
  <section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
    <div 
      class="absolute inset-0 z-0"
      style={{
        backgroundImage: 'url("/images/convoy.webp")',
        backgroundSize: 'cover',
        backgroundPosition: 'center',
      }}
